<DialogPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.thingstodo.DialogController">
    <style>
        -fx-font-size: 10pt;
        -fx-font-family: "Comic Sans MS";
    </style>
    <headerText>
        Enter new ToDo item
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Short Description" GridPane.rowIndex="0" GridPane.columnIndex="0"></Label>
            <TextField fx:id="shortDescription" GridPane.rowIndex="0" GridPane.columnIndex="1"></TextField>
            <Label text="Details" GridPane.rowIndex="1" GridPane.columnIndex="0"></Label>
            <TextArea fx:id="details" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true"></TextArea>
            <Label text="Due Date" GridPane.rowIndex="2" GridPane.columnIndex="0"></Label>
            <DatePicker fx:id="dueDate" GridPane.rowIndex="2" GridPane.columnIndex="1"></DatePicker>
        </GridPane>
    </content>
</DialogPane>